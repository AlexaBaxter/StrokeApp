        <activity android:name=".EmergencyActivity" />
        <activity android:name=".MentalActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".MemoryActivity" />
        <activity android:name=".LocationActivity" />
        <activity android:name=".MemoryGamesActivity" />
        <activity android:name=".SpeechSoundActivity" />
        <activity android:name=".CardGameActivity" />
        <activity android:name=".PhysicalActivity" />
        <activity android:name=".CognitiveActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".NotificationReceiver" />
    </application>

</manifest>